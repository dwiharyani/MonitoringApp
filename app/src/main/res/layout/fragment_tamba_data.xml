<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/dataPelanggan"
    android:layout_height="match_parent"
    tools:context=".ui.home.TambaData">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Data Pelanggan"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="Status">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStatus"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="Nama Pelanggan">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNamaPelanggan"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="No.Telepon">
                    <com.google.android.material.textfield.TextInputEditText
                        android:padding="20dp"
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="Daya">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDaya"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="Lokasi">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLokasi"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:hint="Tanggal Pemakaian">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTgl"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/save"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Save"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_rounded_primary"
                    android:layout_width="250dp"
                    android:layout_height="50dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>